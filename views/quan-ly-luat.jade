extends master
block content
  .row
    .col-md-8.col-md-offset-2
      legend Thêm luật
      .form-group
        label(for='id') Vế trái
        input.form-control(type='text', id='id', name='id', placeholder='Nhập vế trái')
        label(for='name') Vế phải
        input.form-control(type='text', id='name', name='name', placeholder='Nhập vế phải')
        input(name='index', id='index', value='' hidden)
      button.btn.btn-success(id='add') Thêm
      button.btn.btn-primary(id='edit') Sửa
      button.btn.btn-danger(id='remove') Xóa
  
  .row
    br
    .col-md-4.col-md-offset-2
      .panel.panel-default
        .panel-heading Danh sách sự kiện
        table.table.table-hover
          tbody#tableEvents
            th Mã sự kiện
            th Tên sự kiện
          
    .col-md-4
      .panel.panel-default
        .panel-heading Danh sách luật
        table.table.table-hover
          tbody#table
            th Vế trái
            th Vế phải
